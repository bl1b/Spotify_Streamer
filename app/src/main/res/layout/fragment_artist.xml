<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/artist_fragment_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/my_primary_light"
        android:gravity="center"
        android:text="@string/artist_textview_placeholder"/>

    <android.support.v7.internal.widget.ListViewCompat
        android:id="@+id/artist_fragment_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:divider="@drawable/listentry_divider"
        android:visibility="gone"
        tools:entries="@array/listview_dummy_entries"/>

</RelativeLayout>